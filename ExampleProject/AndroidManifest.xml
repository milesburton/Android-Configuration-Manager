<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.mb.android.ddwrt" android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="13" />

	<uses-permission android:name="android.permission.INTERNET" />

	<application android:name=".app.App" android:icon="@drawable/ic_launcher"
		android:label="@string/app_name" android:hardwareAccelerated="true"
		android:theme="@style/Theme.Sherlock">

		<!-- Startup activity -->
		<activity android:name=".ui.AppPreferenceLauncherActivity"
			android:launchMode="singleTop">

			<!-- Set main activity -->
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<!-- /Startup activity -->

		<activity android:name=".ui.GeneralConfigActivity"
			android:launchMode="singleTop" />

	</application>

</manifest>